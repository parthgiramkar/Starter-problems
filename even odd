    int cnt=0;
    for(int i=45;i<51;i++) {
        if(i==0) {
            cout<<i<<" a whole number"<<endl;
        }
        else if(i%2==0) {
            cout<<i<<" is even"<<endl;
            cnt++;
        }
        else {
            cout<<i<<"  is odd "<<endl;
        }
        
    }
    cout<<"the no. of even num's are - "<<cnt;
    
}
